<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
    <title>Main</title>
    <style>
        .d_none {display: none;}
        .a_pd { padding-top: 5px; padding-bottom: 5px; margin-right: 20px; background-color:lightgray;}
    </style>
</head>
<body>
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">
            <img src="/static/1.png" alt="" width="30" height="30" class="d-inline-block align-text-top">
            Session
          </a>
          <div class="justify-content-end">
            <button type="button" class="btn btn-outline-secondary btn-sm logIn_btn" onclick="logIn();">Sign In</button>
            <button type="button" class="btn btn-outline-secondary btn-sm signUp_btn" onclick="">Sign Up</button>
            <button type="button" class="btn btn-outline-secondary btn-sm myInfo_btn d_none">My Information</button>
            <button type="button" class="btn btn-outline-secondary btn-sm logOut_btn d_none" onclick="logOut();">Log Out</button>
          </div>
        </div>
      </nav>
      <div class="row justify-content-end">
        <div class="alert col-2 text-center a_pd d_none" role="alert" id="alert">
        </div>
      </div>

      

    
    <script>
        console.log("'<%=isLogin%>'", '<%=isLogin%>');
        if ('<%=isLogin%>'!== 'false' ){
            $('.myInfo_btn').removeClass('d_none');
            $('.logOut_btn').removeClass('d_none');
            $('.logIn_btn').addClass('d_none');
            $('.signUp_btn').addClass('d_none');
            $('#alert').removeClass('d_none');
            $('#alert').html('Welcome, <%=sessionId%> !');
        }
        function logIn(){
            axios({
                method : 'get',
                url : '/login'
            }).then(()=>{
                window.location.href='/login';
            })
        };
        function logOut(){
            axios({
                method : 'post',
                url : '/logout'
            }).then(()=>{
                window.location.href='/';
            })
        };
    </script>
</body>
</html>