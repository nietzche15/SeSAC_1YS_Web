<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
    <title>Log In</title>
    <style>
        .d_none {display: none;}
    </style>
    <script>
        function checkLogin(){
            var form = document.getElementById('logInForm');
            axios({
                method : 'get',
                url : '/login',
                params : {
                    id : form.id.value,
                    pw : form.pw.value
                }                
            }).then((response)=>{
                if(response.data=='goLogIn'){
                    alert('로그인 후 이용해주세요');
                }else( alert('회원가입 후 이용해주세요'))
            })
        }

        function logIn(){
            var form = document.getElementById('logInForm');
            axios({
                method : 'post',
                url : '/login',
                data : {
                    id : form.id.value,
                    pw : form.pw.value
                }
            }).then((response)=>{
                console.log('response : ', response );
                if(response.data=='SUCCESS'){
                    $('.logIn_btn').addClass('d_none');
                    $('.signUp_btn').addClass('d_none');
                    $('#logInForm').addClass('d_none');

                    $('.myInfo_btn').removeClass('d_none');
                    $('.logOut_btn').removeClass('d_none');
                    $('#msg').html(form.id.value + '님, 환영합니다 ! ');
                }else{ alert('ID와 PW를 다시 확인해주세요');}
            })
        }
        function logOut(){
            var form = document.getElementById('logInForm');
            axios({
                method : 'post',
                url : '/logout',
            }).then((response)=>{
                if(response.data == 'logOut'){
                    form.id.value="";
                    form.pw.value="";
                    $('.logIn_btn').removeClass('d_none');
                    $('.signUp_btn').removeClass('d_none');
                    $('#logInForm').removeClass('d_none');
                    $('#msg').html('');

                    $('.myInfo_btn').addClass('d_none');
                    $('.logOut_btn').addClass('d_none');
                }
            })
        }
    </script>
</head>
<body>
    <form id="logInForm">
        <div>ID : <input type="text" name="id"></div>
        <div>PW : <input type="password" name="pw"></div>  
    </form>
    <div id="msg"></div>
    <div class="logIn_btn">
        <button type="button" onclick="logIn();">Log In</button>
    </div>
    <div class="signUp_btn">
        <button type="button">Sign Up</button>
    </div>
    <div class="myInfo_btn d_none">
        <button type="button">My Information</button>
    </div>
    <div class="logOut_btn d_none">
        <button type="button" onclick="location.href='/'">Log Out</button>
    </div>
</body>
</html>