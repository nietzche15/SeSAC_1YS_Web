<html>
    <head>
        <meta charset="utf-8">      
        <title></title>
        <style>
            fieldset {width : 400px; background-color:cornsilk; text-align: center;}
        </style>
    </head>
    <body>
        <h3>get 요청</h3>
        <form action="/getForm" method="get" >
            <input type="text" name="id" required>
            <input type="password" name="pw" required>
            <fieldset>
                <legend>Gender</legend>
                <input type="radio" name="gender" value="F" id="fm"> <label for='fm'>Female</label>
                <input type="radio" name="gender" value="M" id="m"> <label for='m'>Male</label>
            </fieldset>
            <fieldset>
                <legend>OTT</legend>
                <input type="checkbox" name="ott" value="nt">Netflix
                <input type="checkbox" name="ott" value="dp">Disney+
                <input type="checkbox" name="ott" value="tv">Tiving
            </fieldset>
            <button type="submit">submit</button>
        </form>

        <h3>post 요청</h3>
        <form action="/postForm" method="post" >
            <input type="text" name="id" >
            <input type="password" name="pw" placeholder="password">

            <select name="birthMonth">
                <% for( i=1; i<=12; i++) { %>
                <option value="<%=i%>"><%=i%></option>
                <% } %>
            </select>

            <textarea name="content" rows="10" cols="100">textarea</textarea>

            <button type="submit">submit</button>
        </form>

        <script>
        </script>

    </body>
</html>