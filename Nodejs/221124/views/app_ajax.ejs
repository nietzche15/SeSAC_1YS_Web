<html>
    <head>
        <meta charset="utf-8">
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>

        <style>
            fieldset {width: 300px; background-color: aliceblue;}
            input {margin-top: 5px;}
        </style>

        <script>
            function sendGet(){
                var form = document.getElementById('form2');
                $.ajax({
                    type : "GET",
                    url: "/ajax", 
                    data: { 
                        id : form.id.value,
                        pw : form.pw.value
                     },
                    success : (data)=>{
                        console.log(data);
                        alert( data );
                        
                    },
                    error : (error)=>{
                        console.log(error);
                    }}
                )}
            
            function sendPost(){
                var form = document.getElementById('form2');
                $.ajax({
                    type : "POST",
                    url: "/ajax", 
                    data: { 
                        id : form.id.value,
                        pw : form.pw.value
                     },
                    success : (data)=>{
                        console.log(data);
                        $('#msg1').html(data);
                        
                    },
                    error : (error)=>{
                        console.log(error);
                    }}
                )}
                
        </script>
    </head>
    <body>
        <form id="form2">
            <fieldset>
                <legend>ajax</legend>
                <input type="text" name="id" placeholder="ID"><br>
                <input type="password" name="pw" placeholder="password">
                
            </fieldset>
        </form>
        <div id="msg1"></div>
        <button type="button" onclick="sendGet();">회원가입</button>
        <button type="button" onclick="sendPost();">로그인</button>

    </body>
</html>