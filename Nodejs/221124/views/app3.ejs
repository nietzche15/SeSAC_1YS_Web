<html>
    <head>
        <meta charset="utf-8">
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>

        <style>
            fieldset {width: 300px; background-color: aliceblue;}
            input {margin-top: 5px;}
        </style>

        <script>
            function sendGet(){
                var form = document.getElementById('form2');
                var urlQuery = `?id=${form.id.value}&pw=${form.pw.value}`;

                fetch("/fetch"+urlQuery, {
                    method: 'get',
                })
                .then((response) => response.json())
                .then((data)=>{
                    console.log(data);
                    alert( data.msg  + "님, 회원가입하시겠습니까?");
                })                
            }

            function sendPost(){
                var form = document.getElementById('form2');
                fetch("/fetch", {
                    method: "post",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({
                		id: form.id.value,
                        pw : form.pw.value
                    }),
                }).then((response) => response.json())
                .then((data)=>{
                    console.log(data);
                    $('#msg1').html(data.msg);
                });
            }

        </script>
    </head>
    <body>
        <form id="form2">
            <fieldset>
                <legend>fetch</legend>
                <input type="text" name="id" placeholder="ID"><br>
                <input type="password" name="pw" placeholder="password">
                
            </fieldset>
        </form>
        <div id="msg1"></div>
        <button type="button" onclick="sendGet();">회원가입</button>
        <button type="button" onclick="sendPost();">로그인</button>

    </body>
</html>